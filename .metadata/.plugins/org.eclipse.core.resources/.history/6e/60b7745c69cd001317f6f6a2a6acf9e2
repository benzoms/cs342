package Game;

public interface CardAttributes{
	//types
	public final int ONE = 1;
	public final int TWO = 2;
	public final int THREE = 3;
	public final int FOUR = 4;
	public final int FIVE = 5;
	public final int SIX = 6;
	public final int SEVEN = 7;
	public final int EIGHT = 8;
	public final int NINE = 9;
	public final int TEN = 10;
	public final int ELEVEN = 11;
	public final int TWELVE = 12;

	public final int SKIP = 13;
	public final int WILD = 14;
	
	//colors
	public final int YELLOW = 1;
	public final int RED = 2;
	public final int GREEN = 3;
	public final int BLUE = 4;
}
